---
    title: Jam Docs
    layout: layouts/base.njk
---
{% block main %}

    <div class="content">
        <h2>Statis Site Generators</h2>

        <div class="resources-container">
            {%- for res in collections.ssg -%}
                <div class="card background-texture">
                    <h2>
                        {{res.data.title}}</h2>
                    <div>{{res.data.description}}</div>
                    <div>{{res.templateContent | safe}}</div>
                    <a href= "{{res.data.link}}" >Gå til ressurs</a>
                </div>
            {%- endfor -%}
        </div>

        <h2>Headless CMSes</h2>
        <div class="resources-container">
            {%- for res in collections.cms -%}
                <div class="card background-texture">
                    <h2>{{res.data.title}}</h2>
                    <div>{{res.data.description}}</div>
                    <div>{{res.templateContent | safe}}</div>
                    <a href= "{{res.data.link}}" >Gå til ressurs</a>
                </div>
            {%- endfor -%}
        </div>
    </div>

{% endblock %}